{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build all cpp files",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++11",
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "*.cpp",
        "-o",
        "main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Builds all cpp files in this folder."
    }
  ]
}